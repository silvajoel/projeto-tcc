<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/insulina"
        android:contentDescription="desc_icon_insulina" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/text_tipo_insulina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insulina Rápida"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_momento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Antes do café às 08:00"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_quantidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="10 UI"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textStyle="bold" />
</LinearLayout>
