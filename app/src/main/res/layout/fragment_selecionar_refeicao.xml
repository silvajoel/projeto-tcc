<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alimentacao_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:padding="16dp"
    android:layout_marginBottom="130dp"
    tools:context="com.joelchagas.tcc.ui.fragment.alimentacao.SelecionarRefeicaoFragment">

    <!-- Card Café da Manhã -->
    <TextView
        android:id="@+id/textoTopo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:text="Selecione a Refeição"
        android:textColor="?attr/colorOnSurface"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCafeManha"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="@color/mint_cream">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iconCafeManha"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Ícone Café da Manhã" />

            <TextView
                android:id="@+id/labelCafeManha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Café da Manhã"
                android:textAppearance="?attr/textAppearanceTitleMedium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Card Almoço -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAlmoco"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="@color/mint_cream">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iconAlmoco"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Ícone Almoço" />

            <TextView
                android:id="@+id/labelAlmoco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Almoço"
                android:textAppearance="?attr/textAppearanceTitleMedium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Card Café da Tarde -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCafeTarde"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="@color/mint_cream">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iconCafeTarde"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Ícone Café da Tarde" />

            <TextView
                android:id="@+id/labelCafeTarde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Café da Tarde"
                android:textAppearance="?attr/textAppearanceTitleMedium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Card Jantar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardJantar"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="@color/mint_cream">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iconJantar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Ícone Jantar" />

            <TextView
                android:id="@+id/labelJantar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Jantar"
                android:textAppearance="?attr/textAppearanceTitleMedium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Card Ceia -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCeia"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="@color/mint_cream">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iconCeia"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Ícone Ceia" />

            <TextView
                android:id="@+id/labelCeia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Ceia"
                android:textAppearance="?attr/textAppearanceTitleMedium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Card Avulso -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAvulso"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="@color/mint_cream">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iconAvulso"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Ícone Refeição Avulsa" />

            <TextView
                android:id="@+id/labelAvulso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Refeição Avulsa"
                android:textAppearance="?attr/textAppearanceTitleMedium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Flow que organiza os cards -->
    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow_cards"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="cardCafeManha,cardAlmoco,cardCafeTarde,cardJantar,cardCeia,cardAvulso"
        app:flow_horizontalGap="16dp"
        app:flow_maxElementsWrap="2"
        app:flow_verticalGap="16dp"
        app:flow_wrapMode="chain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textoTopo" />

</androidx.constraintlayout.widget.ConstraintLayout>
